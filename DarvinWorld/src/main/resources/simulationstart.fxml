<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationStart" >
    <top>

        <VBox>
            <HBox padding="">
                <Text fx:id="heightText" text="Podaj Wysokosc mapy" />
                <TextField fx:id="height"  alignment="CENTER"/>
            </HBox>
            <TextField fx:id="width" text="Podaj szerokosc mapy"/>
            <TextField fx:id="startPlant" text="Podaj startową liczbę roślin"/>
