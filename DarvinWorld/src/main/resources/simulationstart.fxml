            <TextField fx:id="minFedEnergy" text="Podaj energie minimalna do rozmnazania"/>
            <TextField fx:id="procreateEnergy" text="Podaj energie tracona na rozmnazanie"/>
            <TextField fx:id="breedEnergy" text="Podaj energie tracona na rozmnazanie"/>
